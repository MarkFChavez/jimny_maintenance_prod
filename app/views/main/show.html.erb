<section>
  <div>
    <%= form_with url: inspection_items_path, method: :get do |f| %>
      <%= f.text_field :part, class: "border-l-4 border-yellow-300 p-2 shadow-md h-12 text-lg w-full", placeholder: "🔎 Search car part (e.g. coolant, bearing, engine oil)" %>
    <% end %>
  </div>

  <div class="flex justify-center w-full">
    <span class="text-xl"> ... </span>
  </div>

  <div>
    <label class="font-semibold block mb-1"> 👉🏼  Or search by maintenance schedule: </label>
    <div class="grid grid-cols-3 lg:grid-cols-5 gap-2">
      <%= link_to "1,000 kms", maintenance_check_path(1_000, driving_condition: :severe), class: "border-l-4 border-yellow-300 p-2 text-lg text-black bg-white shadow-md hover:bg-yellow-300" %>

      <% ((5_000..150_000).step(5_000)).each do |mileage_in_km| %>
        <%= link_to "#{number_to_currency(mileage_in_km, unit: "", precision: 0)} kms", maintenance_check_path(mileage_in_km, driving_condition: :severe), class: "p-2 text-lg text-black bg-white shadow-md hover:bg-yellow-300" %>
      <% end %>
    </div>
  </div>
</section>
